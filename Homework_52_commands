from datetime import datetime, timedelta
from django.db.models import Q, F
from webapp.models import Task, Type, Status


1)
Task.objects.filter(statuses__name='Done', updated_at__range=(datetime.now()-timedelta(days=30), datetime.now()))

2)
Task.objects.filter(statuses__name__in=('Done','New'), types__name__in=('Enhancement','Task'))

3)
Task.objects.filter(Q(summary__icontains='bug') | Q(types__name='Bug')).exclude(statuses__name='Done')

4)
Task.objects.all().values('id', 'summary', 'types', 'statuses')

5)
Task.objects.filter(summary=F('description'))

6)
for i in Type.objects.all():
    i.name
    i.tasks.count()

